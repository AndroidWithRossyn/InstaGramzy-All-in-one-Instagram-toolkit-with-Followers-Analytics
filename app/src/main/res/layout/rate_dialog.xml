<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="bottom" android:orientation="vertical" android:background="@color/colorPrimary" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="20dp" android:textStyle="bold" android:textColor="@color/dark_purple" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:text="Rate Us!" android:layout_marginStart="10dp"/>
    <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="300dp" android:layout_height="wrap_content">
            <ImageView android:id="@+id/star1" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_baseline_star_border_24"/>
            <ImageView android:id="@+id/star2" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_baseline_star_border_24"/>
            <ImageView android:id="@+id/star3" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_baseline_star_border_24"/>
            <ImageView android:id="@+id/star4" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_baseline_star_border_24"/>
            <ImageView android:id="@+id/star5" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_baseline_star_border_24"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="15dp" android:layout_alignParentBottom="true">
        <Button android:textColor="@color/dark_purple" android:id="@+id/rate_btn" android:background="@color/colorPrimary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rate" android:layout_alignParentRight="true" android:layout_alignParentEnd="true" style="?android:attr/borderlessButtonStyle"/>
        <Button android:textColor="@color/colorAccent" android:id="@+id/not_now_btn" android:background="@color/colorPrimary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Not now" android:layout_toLeftOf="@+id/rate_btn" style="?android:attr/borderlessButtonStyle"/>
    </RelativeLayout>
</LinearLayout>
