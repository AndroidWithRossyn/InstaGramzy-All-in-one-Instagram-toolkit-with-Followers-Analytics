<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="250dp" android:layout_height="350dp">
    <LinearLayout android:orientation="vertical" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="@color/colorAccent" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Generating List..."/>
        <TextView android:textSize="15dp" android:textColor="@color/colorAccent" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="Please Wait..."/>
    </LinearLayout>
    <com.airbnb.lottie.LottieAnimationView android:id="@+id/lottie_layer" android:layout_width="200dp" android:layout_height="200dp" app:lottie_autoPlay="true" app:lottie_loop="true" app:lottie_rawRes="@raw/loading_insta"/>
    <TextView android:textSize="11dp" android:textColor="@color/colorAccent" android:gravity="center_vertical" android:id="@+id/message" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Fetching messages..."/>
    <ProgressBar android:id="@+id/progressbar" android:paddingLeft="20dp" android:paddingRight="20dp" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" style="?android:attr/progressBarStyleHorizontal"/>
</LinearLayout>
